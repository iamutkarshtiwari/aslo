<?php
/**
 * Required arguments
 *   $object - the thing we're liking
 *   $likes - number of existing votes
 *
 * Optional arguments:
 *   $user - User object (if logged in)
 */

$userlikes = isset($user) && isset($user['LinkVotes'][$object->id]);
$likes = $userlikes ? $likes - 1 : $likes;

$numlikes = sprintf(nen_US('%s person likes this', '%s people like this', $likes), $likes);

if ($likes > 0) {
    $youlike = sprintf(nen_US('You and %s person like this', 'You and %s people like this', $likes),
                       $likes);
} else {
    $youlike = en_US('You like this');
}

?>
<div class="like-this <?=$userlikes ? 'liked' : 'not-liked'?>">
  <form class="likeit" method="post"
        action="<?=$html->url("/developers/docs/how-to/vote/{$object->id}/up")?>">
    <?=$html->hiddenSession()?>
    <div class="numlikes">
      <?=$numlikes?>
      <?php if (isset($user)): ?>
        <button class="link" type="submit">
          <span class="like-action"><?=en_US('I like this!')?></span>
        </button>
      <?php else: ?>
        <div>
          <a href="<?=$html->url($html->login_url())?>">
            <?=en_US('Log in to like this link')?>
          </a>
        </div>
      <?php endif ?>
      <input type="hidden" name="category" value="<?=$category->slug?>" />
    </div>
  </form>
  <form class="unlike" method="post"
        action="<?=$html->url("/developers/docs/how-to/vote/{$object->id}/cancel")?>">
    <?=$html->hiddenSession()?>
    <div class="numlikes">
      <?=$youlike?>
      <button class="link" type="submit">
        <span class="like-action"><?=en_US("I don't like this")?></span>
      </button>
      <input type="hidden" name="category" value="<?=$category->slug?>" />
    </div>
  </form>
</div>
